<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Vanilla Ionic 4</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
  </head>
  <body class="light-theme">
    <style>
      html:not(.hydrated) body {
        display: block !important;
      }
      .loading-circle {
        display: inline-block;
        position: relative;
        width: 150px;
        height: 150px;
      }
      .loading-circle div {
        box-sizing: border-box;
        display: block;
        position: absolute;
        width: 140px;
        height: 140px;
        margin: 6px;
        border: 6px solid #00a79d;
        border-radius: 50%;
        animation: loading-circle 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
        border-color: #00a79d transparent transparent transparent;
      }
      .loading-circle div:nth-child(1) {
        animation-delay: -0.45s;
      }
      .loading-circle div:nth-child(2) {
        animation-delay: -0.3s;
      }
      .loading-circle div:nth-child(3) {
        animation-delay: -0.15s;
      }
      @keyframes loading-circle {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }

    </style>
    <div style="position: absolute; height: 100%; width: 100%; display: flex; align-items: center; justify-content: center">
      <div class="loading-circle"><div>
    </div>
    <div></div>
    <div></div>
    <div></div>
  </body>
</html>